{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2021",
    "module": "es2022",
    "moduleResolution": "bundler",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.worker.tsbuildinfo",
    "lib": [
      "ES2021"
    ],
    "types": [
      "vite/client"
    ],
    "noEmit": true,
    "isolatedModules": true
  },
  "include": [
    "./vite-env.d.ts",
    "./worker-configuration.d.ts",
    "./src/worker/**/*",
    "./src/shared/**/*"
  ]
}