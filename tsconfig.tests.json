{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "es2021",
    "module": "es2022",
    "moduleResolution": "bundler",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tests.tsbuildinfo",
    "lib": [
      "ES2021",
      "DOM"
    ],
    "types": [
      "vite/client"
    ],
    "isolatedModules": true,
    "sourceMap": true
  },
  "exclude": [
    "./__tests__/worker-runtime/**/*",
    "./src/worker/**/*"
  ],
  "include": [
    "./vite-env.d.ts",
    "./worker-configuration.d.ts",
    "./__tests__/**/*",
    "vitest.config.ts",
    "./src/**/*"
  ]
}