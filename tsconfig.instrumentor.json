{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "moduleResolution": "bundler",
    "module": "ES2020",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.instrumentation.tsbuildinfo",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "types": [
      "vite/client"
    ],
    "isolatedModules": true
  },
  "include": [
    "./src/scripts/instrumentor/**/*",
    "./src/shared/**/*",
    "./src/scripts/shared/**/*"
  ]
}